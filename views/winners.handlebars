{{!-- page the user is brought to once winners are input --}}

<div class="text-center">
  <h1 class="winners" id="winners">Winners!</h1>
  <img class="winner-raccoon" src="/images/2-jewels-raccoon.jpg" alt="raccoon winner with loot" width="500" height="350" padding="5px"/>
  <h2 class="mt-5">Gold: {{race.gold}} Silver: {{race.silver}} Bronze: {{race.bronze}}</h2>
  {{#if gold_racers.length}}
  <h2 class="mt-4">Gold Medalists</h2>
  {{/if}}
  {{#each gold_racers}}
  <div class="row mb-4 project">
    <div class="col-md-5">
      <h2>
      {{user_id}}
      </h2>
    </div>
    {{#if participant_message}}
    <div class="col-md-7 align-content-right">
      <p class="participant-message">
        "{{participant_message}}"
      </p>
    </div>
    {{/if}}
  </div>
  {{/each}}
  
  {{#if silver_racers.length}}
  <h2 class="mt-4">Silver Medalists</h2>
  {{/if}}
  {{#each silver_racers}}
  <div class="row mb-4 project">
    <div class="col-md-5">
      <h2>
      {{user_id}}
      </h2>
    </div>
    {{#if participant_message}}
    <div class="col-md-7 align-content-right">
      <p class="participant-message">
        "{{participant_message}}"
      </p>
    </div>
    {{/if}}
  </div>
  {{/each}}

  {{#if bronze_racers.length}}
  <h2>Bronze Medalists</h2>
  {{/if}}
  {{#each bronze_racers}}
  <div class="row mb-4 project">
    <div class="col-md-5">
      <h2>
      {{user_id}}
      </h2>
    </div>
    {{#if participant_message}}
    <div class="col-md-7 align-content-right">
      <p class="participant-message">
        "{{participant_message}}"
      </p>
    </div>
    {{/if}}
  </div>
  {{/each}}
</div>

<button class="back-btn btn-primary btn justify-content-center" id="back-btn">Back to Race Homepage</button>

<script>
  document.querySelector('#back-btn').addEventListener('click', () => {document.location.href = "/"})
</script>